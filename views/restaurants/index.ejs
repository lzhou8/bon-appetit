<% include ../partials/header %>

<div class="container">
    <header class="jumbotron">
        <div class="container">
            <h1>Welcome to FoodGuru!</h1>
            <p>View our hand-picked restaurants</p>
            
            <p>
                <a class="btn btn-primary" href="/restaurants/new">Add New Restaurant</a>
            </p>
        </div>
    </header>
    
    <div class="row text-center">
        <% restaurants.forEach(function(restaurant){ %>
            <div class="col-md-3 col-sm-6">
                <div class="thumbnail">
                    <img src="<%=restaurant.image%>" class="img-fluid">
                    <div class="caption">
                        <h4><%= restaurant.name %></h4>
                    </div>
                    <p>
                        <a href="/restaurants/<%=restaurant._id%>" class="btn btn-primary">More Information</a>
                    </p>
                </div>
            </div>
        <% }); %>
    </div>
</div>
<% include ../partials/footer %>