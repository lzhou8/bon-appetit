<% include ../partials/header %>

<div class="container">
    <h1 style="text-align: center">Add a New Comment to <%= restaurant.name %></h1>
    <div style="width: 30%; margin: 30px auto;">
        <form action="/restaurants/<%= restaurant._id %>/comments" method="POST">
            <div class="form-group">
                <input class="form-control" type="text" name="comment[text]" placeholder="text">
            </div>
            <div class="form-group">
                <button type="submit" class="btn btn-primary btn-block">Submit</button>
            </div>
        </form>
        <a href="/restaurants">Go Back</a>
    </div>
</div>

<% include ../partials/footer %>